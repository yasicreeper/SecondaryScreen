<Window x:Class="SecondaryScreenHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secondary Screen Host" Height="600" Width="900"
        Background="{StaticResource BackgroundColor}"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Secondary Screen Host" FontSize="28" FontWeight="Bold" 
                       Foreground="{StaticResource TextColor}"/>
            <TextBlock Text="Connect your iPad as a secondary display" FontSize="14" 
                       Foreground="Gray" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="White" BorderBrush="{StaticResource BorderColor}">
            <!-- Connection Tab -->
            <TabItem Header="Connection" FontSize="14">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="Connection Status" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        
                        <!-- Status Display -->
                        <Border Background="#F9F9F9" BorderBrush="{StaticResource BorderColor}" 
                                BorderThickness="1" Padding="20" CornerRadius="5" Margin="0,0,0,20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Ellipse x:Name="StatusIndicator" Width="12" Height="12" 
                                             Fill="Gray" Margin="0,0,10,0"/>
                                    <TextBlock x:Name="StatusText" Text="Waiting for connection..." 
                                               FontSize="16" VerticalAlignment="Center"/>
                                </StackPanel>
                                <TextBlock x:Name="DeviceInfo" Text="No device connected" 
                                           FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </Border>

                        <!-- Connected Devices -->
                        <TextBlock Text="Available Devices" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ListBox x:Name="DeviceList" Height="150" Background="White" 
                                 BorderBrush="{StaticResource BorderColor}" 
                                 SelectionChanged="DeviceList_SelectionChanged"/>

                        <!-- Connection Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <Button Content="Start Server" Width="120" Margin="0,0,10,0" 
                                    Click="StartServer_Click" x:Name="StartServerBtn"/>
                            <Button Content="Stop Server" Width="120" Margin="0,0,10,0" 
                                    Click="StopServer_Click" x:Name="StopServerBtn" IsEnabled="False"/>
                            <Button Content="Refresh Devices" Width="140" 
                                    Click="RefreshDevices_Click"/>
                        </StackPanel>

                        <!-- Connection Info -->
                        <Border Background="#E8F4FF" BorderBrush="#0078D4" BorderThickness="1" 
                                Padding="15" CornerRadius="5" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ“‹ How to Connect Your iPad" FontWeight="SemiBold" 
                                           Foreground="#0078D4" Margin="0,0,0,10"/>
                                <TextBlock FontSize="12" Margin="0,0,0,5" TextWrapping="Wrap">
                                    <Run Text="1. Click 'Start Server' above"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Margin="0,0,0,5" TextWrapping="Wrap">
                                    <Run Text="2. Note the WiFi IP address below"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Margin="0,0,0,5" TextWrapping="Wrap">
                                    <Run Text="3. Open the iPad app"/>
                                </TextBlock>
                                <TextBlock FontSize="12" Margin="0,0,0,10" TextWrapping="Wrap">
                                    <Run Text="4. Enter the IP address and tap Connect"/>
                                </TextBlock>
                                <Separator Margin="0,5,0,10"/>
                                <TextBlock x:Name="WifiIPText" Text="WiFi IP: Not started" 
                                           FontSize="14" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0078D4"/>
                                <TextBlock x:Name="UsbStatusText" Text="USB: Not connected" 
                                           FontSize="12" Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings" FontSize="14">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Windows Settings -->
                        <TextBlock Text="Windows Settings" FontSize="18" FontWeight="SemiBold" 
                                   Margin="0,0,0,15"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Virtual Display Resolution:" Grid.Row="0" Grid.Column="0" 
                                       VerticalAlignment="Center" Margin="0,0,0,15"/>
                            <ComboBox x:Name="ResolutionCombo" Grid.Row="0" Grid.Column="1" 
                                      Width="200" HorizontalAlignment="Left" Margin="0,0,0,15"
                                      SelectionChanged="ResolutionCombo_SelectionChanged">
                                <ComboBoxItem Content="1024x768" IsSelected="True"/>
                                <ComboBoxItem Content="1920x1080"/>
                                <ComboBoxItem Content="2048x1536"/>
                                <ComboBoxItem Content="2732x2048"/>
                            </ComboBox>

                            <TextBlock Text="Quality:" Grid.Row="1" Grid.Column="0" 
                                       VerticalAlignment="Center" Margin="0,0,0,15"/>
                            <Slider x:Name="QualitySlider" Grid.Row="1" Grid.Column="1" 
                                    Minimum="1" Maximum="100" Value="85" Width="300" 
                                    HorizontalAlignment="Left" Margin="0,0,0,15"
                                    ValueChanged="QualitySlider_ValueChanged"/>

                            <TextBlock Text="Frame Rate (FPS):" Grid.Row="2" Grid.Column="0" 
                                       VerticalAlignment="Center" Margin="0,0,0,15"/>
                            <Slider x:Name="FpsSlider" Grid.Row="2" Grid.Column="1" 
                                    Minimum="15" Maximum="60" Value="30" Width="300" 
                                    HorizontalAlignment="Left" Margin="0,0,0,15"
                                    ValueChanged="FpsSlider_ValueChanged"/>

                            <TextBlock Text="Auto-start with Windows:" Grid.Row="3" Grid.Column="0" 
                                       VerticalAlignment="Center"/>
                            <CheckBox x:Name="AutoStartCheck" Grid.Row="3" Grid.Column="1" 
                                      VerticalAlignment="Center" 
                                      Checked="AutoStartCheck_Changed" 
                                      Unchecked="AutoStartCheck_Changed"/>
                        </Grid>

                        <!-- iPad Settings -->
                        <TextBlock Text="iPad Settings" FontSize="18" FontWeight="SemiBold" 
                                   Margin="0,20,0,15"/>
                        
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Touch Input:" Grid.Row="0" Grid.Column="0" 
                                       VerticalAlignment="Center" Margin="0,0,0,15"/>
                            <CheckBox x:Name="TouchInputCheck" Grid.Row="0" Grid.Column="1" 
                                      VerticalAlignment="Center" IsChecked="True" Margin="0,0,0,15"
                                      Checked="TouchInputCheck_Changed" 
                                      Unchecked="TouchInputCheck_Changed"/>

                            <TextBlock Text="Auto-connect on Launch:" Grid.Row="1" Grid.Column="0" 
                                       VerticalAlignment="Center" Margin="0,0,0,15"/>
                            <CheckBox x:Name="AutoConnectCheck" Grid.Row="1" Grid.Column="1" 
                                      VerticalAlignment="Center" IsChecked="True" Margin="0,0,0,15"
                                      Checked="AutoConnectCheck_Changed" 
                                      Unchecked="AutoConnectCheck_Changed"/>

                            <TextBlock Text="Orientation Lock:" Grid.Row="2" Grid.Column="0" 
                                       VerticalAlignment="Center"/>
                            <ComboBox x:Name="OrientationCombo" Grid.Row="2" Grid.Column="1" 
                                      Width="200" HorizontalAlignment="Left"
                                      SelectionChanged="OrientationCombo_SelectionChanged">
                                <ComboBoxItem Content="Auto" IsSelected="True"/>
                                <ComboBoxItem Content="Landscape"/>
                                <ComboBoxItem Content="Portrait"/>
                            </ComboBox>
                        </Grid>

                        <!-- Save Settings Button -->
                        <Button Content="Apply Settings" Width="150" HorizontalAlignment="Left" 
                                Margin="0,10,0,0" Click="ApplySettings_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About Tab -->
            <TabItem Header="About" FontSize="14">
                <StackPanel Margin="20">
                    <TextBlock Text="Secondary Screen Host" FontSize="20" FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Version 1.0.0" FontSize="14" Foreground="Gray" 
                               Margin="0,0,0,20"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                        This application allows you to use your iPad as a secondary display for your Windows PC.
                        Connect via WiFi or USB for the best experience.
                    </TextBlock>
                    <TextBlock Text="Features:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBlock Text="â€¢ WiFi and USB connection support" Margin="20,0,0,3"/>
                    <TextBlock Text="â€¢ Automatic device discovery" Margin="20,0,0,3"/>
                    <TextBlock Text="â€¢ Touch input support" Margin="20,0,0,3"/>
                    <TextBlock Text="â€¢ Customizable resolution and quality" Margin="20,0,0,3"/>
                    <TextBlock Text="â€¢ Low latency streaming" Margin="20,0,0,3"/>
                </StackPanel>
            </TabItem>
            
            <!-- Debug Console Tab -->
            <TabItem Header="Debug Console" FontSize="14">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Debug Console" FontSize="18" FontWeight="SemiBold" 
                               Margin="0,0,0,15" Grid.Row="0"/>
                    
                    <Border Grid.Row="1" Background="Black" BorderBrush="{StaticResource BorderColor}" 
                            BorderThickness="1" Padding="10">
                        <ScrollViewer x:Name="DebugScrollViewer" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="DebugConsoleText" 
                                       Foreground="LimeGreen" 
                                       FontFamily="Consolas" 
                                       FontSize="12" 
                                       TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Clear Console" Width="120" Margin="0,0,10,0" 
                                Click="ClearConsole_Click"/>
                        <Button Content="Copy to Clipboard" Width="140" 
                                Click="CopyConsole_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0" Padding="10" Margin="0,20,0,0">
            <Grid>
                <TextBlock x:Name="StatusBarText" Text="Ready" FontSize="12" 
                           Foreground="Gray" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
